<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/warna_bg"
    tools:context=".view.info.FragmentInfo">

    <!-- Bungkus semua kontenmu dalam ConstraintLayout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_14sdp"
        android:layout_marginBottom="@dimen/_14sdp">

        <!-- Semua isi layout kamu yang sekarang ada di sini -->

        <ImageView
            android:id="@+id/image_back"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:src="@drawable/ic_panah_kembali_hijau"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_info_text"
            style="@style/TextAppearance.Material3.TitleLarge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:fontFamily="@font/nunito_extrabold"
            android:text="Info"
            android:textColor="@color/warna_hijau_tua"
            android:textSize="28dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.452"
            app:layout_constraintStart_toEndOf="@id/image_back"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/logoqolami"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_marginStart="@dimen/_82sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_82sdp"
            android:src="@drawable/logo_qolami"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_info_text" />

        <TextView
            android:id="@+id/text_qolami"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginEnd="150dp"
            android:fontFamily="@font/nunito_extrabold"
            android:text="Tentang Aplikasi"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logoqolami" />

        <TextView
            android:id="@+id/tv_isi_tentang_aplikasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/nunito_semibold"
            android:lineSpacingExtra="@dimen/_1sdp"
            android:text="Qolami Project adalah aplikasi pembelajaran bahasa Arab yang menggunakan Metode Qolami. Aplikasi ini dirancang untuk semua usia dan dapat digunakan oleh guru agama untuk mengajarkan bahasa Arab kepada murid-muridnya. Metode Qolami menawarkan pendekatan yang berbeda dari metode lainnya. Sebagai pengembang, kami membuat aplikasi ini dalam bentuk mobile agar mudah diakses oleh semua pengguna."
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/text_qolami" />

        <!-- Bagian pengembang lama dan baru kamu bisa taruh di sini -->

        <TextView
            android:id="@+id/tv_pengembang_lama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_extrabold"
            android:text="Tim Pengembang"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_isi_tentang_aplikasi" />

        <TextView
            android:id="@+id/tv_indomitable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="© 2023, Indomitable Team"
            android:textColor="@color/warna_hijau_tua"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_pengembang_lama" />

        <TextView
            android:id="@+id/tv_nama_tim_indomitable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_semibold"
            android:lineSpacingExtra="@dimen/_1sdp"
            android:text="Muhammad Fadhil Rabbani\nMuhammad Sutan Baihaqi\nSyibli Adam Firmanda\nSabila Mursid Ramadhan"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_indomitable" />

        <TextView
            android:id="@+id/tv_pengembang_kedua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/nunito_extrabold"
            android:text="Tim Pengembang"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_nama_tim_indomitable" />

        <TextView
            android:id="@+id/tv_sofun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="© 2024, SOFUN Team"
            android:textColor="@color/warna_hijau_tua"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_pengembang_kedua" />

        <TextView
            android:id="@+id/tv_nama_tim_sofun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/nunito_semibold"
            android:lineSpacingExtra="@dimen/_1sdp"
            android:text="Agivqy Nadif Santoso\nHeru Prayogo\nMuhammad Farhan Al Anzhari"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_sofun" />
        <!-- Tambahkan juga konten baru LughahTech di bawah ini -->
        <TextView
            android:id="@+id/tv_pengembang_baru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/nunito_extrabold"
            android:text="Tim Pengembang"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_nama_tim_sofun" />
        <TextView
            android:id="@+id/tv_LughahTech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="© 2025, LughahTech Team"
            android:textColor="@color/warna_hijau_tua"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_pengembang_baru" />

        <TextView
            android:id="@+id/tv_nama_tim_LughahTech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/nunito_semibold"
            android:lineSpacingExtra="@dimen/_1sdp"
            android:text="Arman Sholihin\nMuhammad Fadhil Rabbani\nRayhan Alif Zahrandhika R."
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_LughahTech" />

        <!-- Container horizontal untuk teks tim dan ikon -->
        <ImageView
            android:id="@+id/iv_character"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginStart="@dimen/_90sdp"
            android:src="@drawable/char4"
            app:layout_constraintStart_toEndOf="@id/tv_pengembang_kedua"
            app:layout_constraintTop_toTopOf="@id/tv_pengembang_kedua" />
        <TextView
            android:id="@+id/tv_ikuti_kami"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:fontFamily="@font/nunito_extrabold"
            android:gravity="center"
            android:text="Ikuti Kami"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_nama_tim_LughahTech"
            app:layout_constraintTop_toBottomOf="@id/iv_character" />
        <ImageView
            android:id="@+id/iv_youtube"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:src="@drawable/ic_youtube"
            app:layout_constraintStart_toEndOf="@id/tv_nama_tim_LughahTech"
            app:layout_constraintTop_toBottomOf="@id/tv_ikuti_kami" />

        <ImageView
            android:id="@+id/iv_tiktok"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:src="@drawable/ic_tiktok"
            app:layout_constraintStart_toEndOf="@id/iv_youtube"
            app:layout_constraintTop_toBottomOf="@id/tv_ikuti_kami" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
